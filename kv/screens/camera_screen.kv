<CameraScreen>:
    BoxLayout:
        orientation: 'vertical'

        UpperBar:
            size_hint: (1, 0.1)
            canvas.before:
                Color:
                    rgb:(148/255, 193/255, 1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        BoxLayout:
            orientation:'vertical'
            size_hint:(1, 0.9)
            canvas:
                Color:
                    rgba:(1,1,1,1)
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                size_hint:(1,.3)
            BoxLayout:
                id: camera_layout
                size_hint: (1, 0.7)
                # 여기에 OpenCV 카메라 이미지가 표시됨
            
            BoxLayout:
                orientation:'horizontal'
                Button:
                    size_hint: (.1, .2)
                    pos_hint: {'center_x': 0.8}
                    background_color:(0,0,0,0)
                    on_press: root.capture()
                    Image:
                        source: 'kv/img/cameraonicon.png'
                        size_hint: (1, 1)
                        size: (self.parent.width, self.parent.height)
                        pos: self.parent.pos

                Button:
                    text:'편               집'
                    font_name: 'font2.ttf'
                    font_size:'20sp'
                    color:(1,1,1)
                    size_hint: (.1, .2)
                    pos_hint: {'center_x': 0.9}
                    background_normal:''
                    background_color:(148/255, 193/255, 1, 1)

                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'ed'
#                    Image:
#                        source: 'kv/img/editicon.png'
#                        size_hint: (1, 1)
#                        size: (self.parent.width, self.parent.height)
#                        pos: self.parent.pos


                Button:
                    size_hint: (.1, .2)
                    pos_hint: {'center_x': 0.9}
                    background_color:(0,0,0,0)
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current ='Res'



                    Image:
                        source: 'kv/img/nexticon.png'
                        size_hint: (1, 1)
                        size: (self.parent.width, self.parent.height)
                        pos: self.parent.pos
            Label:
                size_hint:(1, .1)